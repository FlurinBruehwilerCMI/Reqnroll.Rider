  <extensions defaultExtensionNs="com.intellij">
    <fileType name="SpecFlow" language="Gherkin" extensions="feature" implementationClass="com.jetbrains.rider.plugins.specflowriderplugin.ideaInterop.fileTypes.GherkinFileType" />
    <lang.parserDefinition language="Gherkin" implementationClass="com.jetbrains.rider.plugins.specflowriderplugin.ideaInterop.fileTypes.GherkinParserDefinition"/>
    <lang.syntaxHighlighterFactory language="Gherkin" implementationClass="com.jetbrains.rider.plugins.specflowriderplugin.ideaInterop.fileTypes.GherkinSyntaxHighlighterFactory"/>
    <backend.markup.adapterFactory language="Gherkin" implementationClass="com.jetbrains.rdclient.daemon.FrontendMarkupAdapterFactory" />
    <backend.typedHandler language="Gherkin" implementationClass="com.jetbrains.rider.plugins.specflowriderplugin.ideaInterop.fileTypes.GherkinTypedHandler" />
    <backend.actions.support language="Gherkin" implementationClass="com.jetbrains.rider.actions.RiderActionSupportPolicy" />
    <backend.autoPopup.support language="Gherkin" implementationClass="com.jetbrains.rider.completion.BackendAndGenericRider" />
    <rider.debuggerSupportPolicy language="Gherkin" implementationClass="com.jetbrains.rider.debugger.RiderDebuggerSupportPolicy" />
    <lang.altEnter language="Gherkin" implementationClass="com.jetbrains.rider.intentions.altEnter.ReSharperBulbMenuModelFactory" />

